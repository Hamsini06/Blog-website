<div class="main_sec">
  <h3 style = "display: inline-block;">Your topics:</h3>
  <%btn_length.forEach(function(val){%>
    <button type="button" class="btn_val btn-primary btn-md" name="button"><a href="reg.html" style = "color:white;"><%=val%></a></button>
  <%})%>
  <button type="button" style = "position:absolute; right: 50px;"class="btn_add btn-md" name="button"><a href = "compose">Create <i class="fa fa-pen to square"></i></a></button>
</div>
<section class = "blog_display">
  <%usr_data.forEach(function(val){%>
    <button id = "read_btn" type="button" name="button" onclick = "/read_blogs" style = "border:none; background-color: white; text-align:left;">
      <div class="main_body row">
      <div class="col-lg-6">
        <h5 style="display:inline-block; padding-right:20px;"><%=val.username%></h5>
        <p style="display:inline-block;"><%=val.date.toString().substring(0,9)%></p>
        <h2><%=val.title%></h2>
         <p><%=val.blog.substring(0,200)%></p>
      </div>
      <div class="col-lg-6">
      <img src="images/tech.png" class = "btn_dis" alt="blogart">
      </div>
      </div>
      <hr color="gray"size="10">
    </button>



  <%})%>


</section>




